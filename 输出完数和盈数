#include<stdio.h>
#include<stdlib.h>
int main()
{
	int i,j,count=0;
	printf("E:");
	for(i=2;i<=60;i++)
	{
		for(j=1;j<i;j++)
		{
			if(i%j==0)
			{
				count+=j;
			}
		}
		if(count==i)
		{
			printf("%3d",count);
		}
		count=0;
	}
	printf("\n");
	printf("G:");
	count=0;
	for(i=2;i<=60;i++)
	{
		for(j=1;j<i;j++)
		{
			if(i%j==0)
			{
				count+=j;
			}
		}
		if(count>i)
		{
			printf("%3d",i);
		}
		count=0;
	}
	system("pause");
	return 0;
}
